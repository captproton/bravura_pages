<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @static_page.title %></h1>
    <%= link_to 'Back to List', static_pages_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <p class="text-gray-700 text-base mb-4">
      <%= @static_page.content %>
    </p>

    <% if @static_page.published_at %>
      <p class="text-gray-500 text-sm mb-4">
        <strong>Published At:</strong> <%= @static_page.published_at.strftime("%B %d, %Y %I:%M %p") %>
      </p>
      <% else %>
      <p class="text-gray-500 text-sm mb-4">
        <strong>Status:</strong> Draft
      </p>
    <% end %>

    <% if @static_page.author %>
      <p class="text-gray-500 text-sm">
        <strong>Author:</strong> <%= @static_page.author.name %>
      </p>
    <% end %>
  </div>

  <div class="flex items-center justify-between">
    <%= link_to 'Edit', edit_static_page_path(@static_page), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    <%= link_to 'Back to List', static_pages_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    <%= button_to 'Destroy', @static_page, method: :delete, data: { confirm: 'Are you sure you want to delete this static page?' }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>
</div>